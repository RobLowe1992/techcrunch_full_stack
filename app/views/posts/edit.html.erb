<h1>Editing Post</h1>

<%= form_for @post do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :author %>
<%= f.text_field :author %>
<%= f.label :img_url %>
<%= f.text_field :img_url %>
<%= f.label :content %>
<%= f.text_field :content %>

<%= f.submit %>
<% end %>

<%= link_to 'Show', @post %> |
<%= link_to 'Back', posts_path %>
