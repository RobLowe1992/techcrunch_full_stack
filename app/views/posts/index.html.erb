<p id="notice"><%= notice %></p>

<h1>Posts</h1>
<% @posts.each do | post | %>
<a href="<%= post_path(post) %>">
<div>
  <h2><%= post.title %></h2>
  <h3><%= post.author %></h3>
  <img src="<%= post.img_url %>">
  <p><%= post.content %></p>
</div>
<%= link_to 'Add Comment', new_post_comment_path(post) %>
</a>

<% end %>
<%= link_to 'New Post', new_post_path %>
