<h1>New Post</h1>
<%= form_for @post, :url => url_for(:controller => 'posts', :action => 'create') do |f| %>
<%= f.label :title %>
<%= f.text_field :title , class: 'block-style'%>
<%= f.label :author %>
<%= f.text_field :author , class: 'block-style'%>
<%= f.label :img_url %>
<%= f.text_field :img_url , class: 'block-style'%>
<%= f.label :content %>
<%= f.text_field :content , class: 'block-style'%>
<%= f.submit %>
<% end %>

<%= link_to 'Back', posts_path %>
