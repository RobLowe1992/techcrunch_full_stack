<p id="notice"><%= notice %></p>

<div>
  <h2><%= @post.title %></h2>
  <img src="<%= @post.img_url %>">
  <p><%= @post.content %></p>
</div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<h2>Comments</h2>
    <%= link_to 'Add Comment', new_post_comment_path(@post) %>
<div>
    <% @comments.each do |comment| %>
        <p><%= comment.content %></p>
    <% end %>
</div>
