<h1>Editing Social</h1>

<%= form_for @social, :url => url_for(:controller => 'socials', :action => 'update') do |f| %>
<%= f.label :title %>
<%= f.text_field :title %>
<%= f.label :author %>
<%= f.text_field :author %>
<%= f.label :category %>
<%= f.text_field :category %>
<%= f.label :img_url %>
<%= f.text_field :img %>
<%= f.label :description %>
<%= f.text_area :description, size: "40x4" %>
<%= f.label :body %>
<%= f.text_area :body, size: "40x10" %>
<%= f.submit %>
<% end %>

<%= link_to 'Show', social_path(@social) %> |
<%= link_to 'Back', socials_path %>


