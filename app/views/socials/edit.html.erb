<h1>Editing Social</h1>

<%= form_for @social, :url => url_for(:controller => 'socials', :action => 'update') do |f| %>
<div class="inherit">
    <%= f.label :title %>
    <%= f.text_field :title %>
</div>
<div class="inherit">
    <%= f.label :author %>
    <%= f.text_field :author %>
</div>
<div class="inherit">
    <%= f.label :category %>
    <%= f.text_field :category %>
</div>
<div class="inherit">
    <%= f.label :img_url %>
    <%= f.text_field :img %>
</div>
<div class="inherit">
    <%= f.label :description %>
    <%= f.text_area :description, size: "40x4" %>
</div>
<div class="inherit">
    <%= f.label :body %>
    <%= f.text_area :body, size: "40x10" %>
</div>

<%= f.submit %>
<% end %>

<%= link_to 'Show', social_path(@social) %> |
<%= link_to 'Back', socials_path %>


